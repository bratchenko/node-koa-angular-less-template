<!doctype html>
<html>
<head>
    <meta charset="utf-8">

    <title>Управление заявками</title>

    <link rel="icon" href="/favicon.ico" type="image/x-icon">

    <!-- build:css({.tmp,client}) /styles/application.css -->
    <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/styles/application.css">
    <!-- endbuild -->

    <%if(config.livereload.enabled) {%>
        <script src="http://<%=config.livereload.host || 'localhost'%>:<%=config.livereload.port || 35729%>/livereload.js?snipver=1%>"></script>
    <%}%>
</head>
<body>

    <div class="container">
        <nav class="navbar navbar-default" role="navigation">
          <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#main-navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="/">В начало</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="main-navbar-collapse">
              <ul class="nav navbar-nav">
                <li ui-sref="admin.applications" ui-sref-active="active"><a ui-sref="admin.applications">Список заявок</a></li>
              </ul>
              <ul class="nav navbar-nav navbar-right" ng-if="currentUser">
                <li><a target="_self" href="/logout">Выйти</a></li>
              </ul>
            </div><!-- /.navbar-collapse -->
          </div><!-- /.container-fluid -->
        </nav>


        <div class="page-wrapper" ui-view>
        </div>
    </div>

    <!-- build:js /scripts/libs.js -->
    <script src="/bower_components/jquery/dist/jquery.js"></script>
    <script src="/bower_components/bootstrap/js/collapse.js"></script>
    <script src="/bower_components/angular/angular.js"></script>

    <script src="/bower_components/angular-ui-router/release/angular-ui-router.js"></script>
    <script src="/bower_components/angular-resource/angular-resource.js"></script>
    <script src="/bower_components/angular-bootstrap/ui-bootstrap-tpls.js"></script>
    <script src="/bower_components/ng-file-upload/angular-file-upload.js"></script>
    <!-- endbuild -->

    <!-- build:js /scripts/scripts.js -->
    <script src="/scripts/admin-app.js"></script>

    <script src="/scripts/controllers/admin/applications.js"></script>
    <script src="/scripts/controllers/admin/application.js"></script>

    <script src="/scripts/models/admin/application.js"></script>
    <!-- endbuild -->

    <script>
        angular.module('app').constant('USER', <%-JSON.stringify(user) || 'null'%>);
    </script>

    <script type="text/javascript">
        angular.bootstrap(document, ['app']);
    </script>
</body>
</html>
